@page
@model ShoppingAttire.Pages.Login.UserRegistrationModel
@{
}
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="regUser.UserName"></label>
            <div class="col-sm-6">
                <input asp-for="regUser.UserName" placeholder="Login"/>
            </div>
            
            <span asp-validation-for="regUser.UserName"></span>
        </div>

        <div class="form-group">
            <label asp-for="regUser.Password"></label>
            <div class="col-sm-6">
                <input asp-for="regUser.Password" placeholder="Password"/>
            </div>
            <span asp-validation-for="regUser.Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="regUser.ConfirmPassword"></label>
            <div class="col-sm-6">
                <input asp-for="regUser.ConfirmPassword" placeholder="Confirm Password"/>
            </div>
            <span asp-validation-for="regUser.ConfirmPassword"></span>
        </div>
        

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="button-33">Sign Up</button>
            </div>
        </div>
    </form>
</div>