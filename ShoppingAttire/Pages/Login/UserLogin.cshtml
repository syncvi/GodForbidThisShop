@page
@model ShoppingAttire.Pages.Login.UserLoginModel
@{
}
<div>
    @Model.Message
</div>

<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="user.UserName"></label>
            <div class="col-sm-6">
                <input asp-for="user.UserName" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="user.Password"></label>
            <div class="col-sm-6">
                <input asp-for="user.Password" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="button-33">Sign In</button>
            </div>
        </div>
    </form>
</div>
