@page
@model ShoppingAttire.Pages.Admin.ListModel
@{
    Layout = "_Layout";
    ViewData["title"] = "Users List";
}
<h2 class="mb-4 mt-5">Users List</h2>


<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => Model.userList[0].UserId)</th>
            <th scope="col">@Html.DisplayNameFor(model => Model.userList[0].UserName)</th>
            <th scope="col">@Html.DisplayNameFor(model => Model.userList[0].Password)</th>
            <th scope="col">@Html.DisplayNameFor(model => Model.userList[0].Role)</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model.userList)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(m => c.UserId)</th>
                <td>@Html.DisplayFor(m => c.UserName)</td>
                <td>@Html.DisplayFor(m => c.Password)</td>
                <td>@Html.DisplayFor(m => c.Role)</td>
                <td>
                    <a asp-page="./UpdateUser" asp-route-givenId=@c.UserId>Update</a> |
                    <a asp-page="./DeleteUser" asp-route-givenId=@c.UserId>Remove</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row col-sm-12 mt-5">
    <a asp-page="./AdminRegistration"><button class="button-33">Add User</button></a>
</div>