@page
@model ShoppingAttire.Pages.CategoryFun.ListModel
@{
    Layout = "_Layout";
    ViewData["title"] = "Category List";
}
<h2 class="mb-4 mt-5">Category List</h2>


<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => Model.categoryList[0].Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => Model.categoryList[0].ShortName)</th>
            <th scope="col">@Html.DisplayNameFor(model => Model.categoryList[0].LongName)</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model.categoryList)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(m => c.Id)</th>
                <td>@Html.DisplayFor(m => c.ShortName)</td>
                <td>@Html.DisplayFor(m => c.LongName)</td>
                <td>
                    <a asp-page="./Details" asp-route-givenId=@c.Id>Details</a> |
                    <a asp-page="./Update" asp-route-givenId=@c.Id>Update</a> |
                    <a asp-page="./Delete" asp-route-givenId=@c.Id>Remove</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole("Admin") || User.IsInRole("Sales")){
<div class="row col-sm-12 mt-5">
    <a asp-page="./Insert"><button class="button-33">Add Category</button></a>
</div>
}