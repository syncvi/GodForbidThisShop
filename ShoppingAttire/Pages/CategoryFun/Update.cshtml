@page
@model ShoppingAttire.Pages.CategoryFun.UpdateModel
@{
    Layout = "_Layout";
    ViewData["title"] = "Update Category";
}

<h2 class="mb-4">Update Category</h2>

<form class="form-horizontal" method="post">
    <input asp-for="category.Id" type="hidden" />
 <style>
 body {
  
  color: #99eeb4;
  height: 100vh;
  display: flex;
}

/* We set the position to relative so that we can stack a blurred pseudo element on top of the original text */

span {
  position: relative;
  font-family: "Avenir Next", sans-serif;
  font-weight: 900;
  font-size: 32px;
  text-transform: uppercase;
  font-style: italic;
  letter-spacing: 0.05em;
  display: inline-block;
}

/* We create a pseudo element and blur it using the SVG filter. We’ll grab the content from the custom HTML attribute. */

span:before {
  position: absolute;
  left: 0;
  top: 0;
  content: attr(filter-content);

  filter: url(#motion-blur-filter);
}

</style>
    <div class="form-group">
        <label asp-for="category.ShortName" class="control-label col-sm-2"></label>

        <div class="col-sm-6">
            <input asp-for="category.ShortName" class="form-control" />
        </div>

        <span asp-validation-for="category.ShortName"></span>
    </div>

    <div class="form-group">
        <label asp-for="category.LongName" class="control-label col-sm-2"></label>

        <div class="col-sm-6">
            <input asp-for="category.LongName" class="form-control" />
        </div>

        <span asp-validation-for="category.LongName"></span>
    </div>

    <div class="form-group">
        <label asp-for="category.Description" class="control-label col-sm-2"></label>

        <div class="col-sm-6">
            <input asp-for="category.Description" class="form-control" />
        </div>

        <span asp-validation-for="category.Description"></span>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 mt-4">
            <button type="submit" class="button-33">Submit</button>
        </div>
    </div>

</form>
